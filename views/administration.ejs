                        üîç Rechercher
                    </button>
                </form>
            </div>
            <div class="table-stats">Total: <%= pagination.totalEmployees %> employ√©s</div>
        </div>

        <% if (employees.length === 0) { %>
            <div class="no-results">
                Aucun employ√© trouv√©<% if (searchQuery) { %> pour "<%= searchQuery %>"<% } %>
            </div>
        <% } else { %>
            <table class="employee-table">
                <thead>
                    <tr>
